     "version": "0.2.0",
    "configurations": [
        {
            "type": "mix_task",
            "name": "mix phx.server (no debug)",
            "request": "launch",
            "task": "phx.server",
            "taskArgs": ["--no-halt"],
            "projectDir": "${workspaceRoot}/dev/elixir/app",
